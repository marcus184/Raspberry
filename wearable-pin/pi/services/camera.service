[Unit]
Description=Raspberry Pi Wearable Camera Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/wearable-pin/pi
ExecStart=/usr/bin/python3 /home/pi/wearable-pin/pi/capture_image.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
